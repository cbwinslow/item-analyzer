{
  "name": "item-analyzer",
  "version": "1.0.0",
  "description": "Item Analyzer Platform on Cloudflare",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest --config vitest.config.frontend.js && vitest --config vitest.config.backend.js",
    "test:frontend": "vitest --config vitest.config.frontend.js",
    "test:backend": "vitest --config vitest.config.backend.js",
    "test:env": "docker-compose up -d && npm run test",
    "generate-tests": "node test-generator.js",
    "test:all": "npm run test && npm run test:e2e",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.3"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@opensearch-project/opensearch": "^2.4.0",
    "@supabase/supabase-js": "^2.39.0",
    "stripe": "^14.0.0"
  }
}
